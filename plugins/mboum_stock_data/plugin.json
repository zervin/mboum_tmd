{
  "version": 1,
  "uuid": "mboum-stock-data",
  "iconURL": "https://www.linology.com/images/market_core.png",
  "emoji": "ðŸ“ˆ",
  "title": "MBOUM Stock Data",
  "openaiSpec": {
    "name": "mboum_stock_data",
    "description": "Access MBOUM's stock data API for detailed information on individual stocks, including quotes, historical data, company profiles, financials, and recommendations. Use this plugin when you need specific information about individual stocks rather than broad market data.",
    "parameters": {
      "type": "object",
      "required": [
        "endpoint",
        "ticker"
      ],
      "properties": {
        "endpoint": {
          "type": "string",
          "description": "The API endpoint to call",
          "enum": [
            "quote",
            "quotes",
            "history",
            "modules",
            "analyst_ratings",
            "ticker_summary",
            "price_targets",
            "financials",
            "revenue",
            "short_interest",
            "institutional_holdings",
            "sec_filings",
            "historical"
          ]
        },
        "ticker": {
          "type": "string",
          "description": "Stock ticker symbol (e.g. AAPL, MSFT)",
          "required": true
        },
        "type": {
          "type": "string",
          "description": "Security type",
          "enum": ["STOCKS", "ETF", "MUTUALFUNDS", "FUTURES"],
          "required": false
        },
        "interval": {
          "type": "string",
          "description": "Time interval for historical data",
          "enum": ["1m", "5m", "15m", "30m", "1d", "1wk", "1mo", "3mo"],
          "required": false
        },
        "module": {
          "type": "string",
          "description": "Module name for financial data",
          "enum": [
            "profile", "income-statement", "balance-sheet", "cashflow-statement",
            "financial-data", "statistics", "ratios", "calendar-events", "sec-filings",
            "recommendation-trend", "upgrade-downgrade-history", "insider-transactions",
            "insider-holders", "net-share-purchase-activity", "earnings", "index-trend",
            "industry-trend", "sector-trend"
          ],
          "required": false
        },
        "diffandsplits": {
          "type": "boolean",
          "description": "Include dividends and splits in historical data",
          "required": false
        },
        "timeframe": {
          "type": "string",
          "description": "Timeframe for financial data",
          "enum": ["annually", "quarterly", "trailing"],
          "required": false
        },
        "page": {
          "type": "integer",
          "description": "Page number for paginated results",
          "required": false
        },
        "limit": {
          "type": "integer",
          "description": "Limit number of results returned",
          "required": false
        },
        "from_date": {
          "type": "string",
          "description": "Start date for historical data (YYYY-MM-DD)",
          "required": false
        },
        "to_date": {
          "type": "string",
          "description": "End date for historical data (YYYY-MM-DD)",
          "required": false
        }
      }
    }
  },
  "implementationType": "javascript",
  "id": "mboum_stock_data",
  "method": "GET"
}
