{
  "schema_version": "v1",
  "name_for_human": "Mboum Stock Data",
  "name_for_model": "mboum_stock_data",
  "description_for_human": "Access stock market data from Mboum API, including quotes, profiles, financials, and historical prices.",
  "description_for_model": "This plugin provides access to the Mboum API's stock data endpoints, allowing you to retrieve quotes, company profiles, financial statements, historical pricing, recommendations, and key statistics for stocks.",
  "auth": {
    "type": "none"
  },
  "api": {
    "type": "openapi",
    "url": "https://example.com/mboum_stock_data_openapi.json",
    "has_user_authentication": false,
    "endpoints": [
      {
        "name": "mboum_stock_data",
        "description": "Provides access to stock data from Mboum API including quotes, company profiles, financial statements, historical pricing, recommendations, and key statistics."
      }
    ],
    "base_url": "https://api.mboum.com"
  },
  "spec": {
    "openapi": "3.0.0",
    "info": {
      "title": "Mboum Stock Data API",
      "description": "Access stock market data from Mboum API",
      "version": "v1.0"
    },
    "paths": {
      "/mboum_stock_data": {
        "post": {
          "summary": "Get stock data from Mboum API",
          "operationId": "mboum_stock_data",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MboumStockDataRequest"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful response with stock data",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "MboumStockDataRequest": {
          "type": "object",
          "required": ["requestDetails"],
          "properties": {
            "requestDetails": {
              "type": "object",
              "required": ["endpoint"],
              "properties": {
                "endpoint": {
                  "type": "string",
                  "description": "The specific stock data endpoint to query",
                  "enum": ["quote", "profile", "summary", "balance_sheet", "cash_flow", "income_statement", "historical", "recommendation", "key_statistics", "esg_data", "insider_transactions"],
                  "example": "quote"
                },
                "queryParams": {
                  "type": "object",
                  "description": "Parameters for the chosen endpoint",
                  "properties": {
                    "symbol": {
                      "type": "string",
                      "description": "Stock symbol (e.g., 'AAPL', 'MSFT') - required for all endpoints",
                      "example": "AAPL"
                    },
                    "region": {
                      "type": "string",
                      "description": "Region code for localized data",
                      "example": "US"
                    },
                    "lang": {
                      "type": "string",
                      "description": "Language code for localized data",
                      "example": "en"
                    },
                    "period": {
                      "type": "string",
                      "description": "Financial reporting period for financial statements",
                      "enum": ["annual", "quarterly"],
                      "example": "annual"
                    },
                    "interval": {
                      "type": "string",
                      "description": "Time interval for historical data",
                      "enum": ["1d", "1wk", "1mo"],
                      "example": "1d"
                    },
                    "range": {
                      "type": "string",
                      "description": "Time range for historical data",
                      "enum": ["1d", "5d", "1mo", "3mo", "6mo", "1y", "2y", "5y", "10y", "ytd", "max"],
                      "example": "1mo"
                    },
                    "events": {
                      "type": "boolean",
                      "description": "Include events (dividends, splits) in historical data",
                      "example": true
                    },
                    "page": {
                      "type": "integer",
                      "description": "Page number for paginated results (starting from 1)",
                      "example": 1
                    },
                    "type": {
                      "type": "string",
                      "description": "Type filter for insider transactions",
                      "enum": ["Buy", "Sell", "Option Exercise", "Award", "Payment", "Conversion", "Other", "Transfer"],
                      "example": "Buy"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
