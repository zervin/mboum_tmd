{
  "schema_version": "v1",
  "name_for_human": "Mboum Technical Indicators",
  "name_for_model": "mboum_technical_indicators",
  "description_for_human": "Access technical indicators data from Mboum API, including SMA, EMA, RSI, MACD, Bollinger Bands, and more.",
  "description_for_model": "This plugin provides access to the Mboum API's technical indicators endpoints, allowing you to retrieve popular technical analysis indicators for stocks and other securities. Supported indicators include SMA, EMA, RSI, MACD, Bollinger Bands, ADX, Stochastic, Fibonacci retracements, ATR, CCI, and pivot points.",
  "auth": {
    "type": "none"
  },
  "api": {
    "type": "openapi",
    "url": "https://example.com/mboum_technical_indicators_openapi.json",
    "has_user_authentication": false,
    "endpoints": [
      {
        "name": "mboum_technical_indicators",
        "description": "Provides access to technical analysis indicators from Mboum API including moving averages, oscillators, bands, and other technical analysis tools."
      }
    ],
    "base_url": "https://api.mboum.com"
  },
  "spec": {
    "openapi": "3.0.0",
    "info": {
      "title": "Mboum Technical Indicators API",
      "description": "Access technical indicators data from Mboum API",
      "version": "v1.0"
    },
    "paths": {
      "/mboum_technical_indicators": {
        "post": {
          "summary": "Get technical indicators data from Mboum API",
          "operationId": "mboum_technical_indicators",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MboumTechnicalIndicatorsRequest"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful response with technical indicators data",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "MboumTechnicalIndicatorsRequest": {
          "type": "object",
          "required": ["requestDetails"],
          "properties": {
            "requestDetails": {
              "type": "object",
              "required": ["endpoint"],
              "properties": {
                "endpoint": {
                  "type": "string",
                  "description": "The specific technical indicator endpoint to query",
                  "enum": ["sma", "ema", "rsi", "macd", "bbands", "adx", "stoch", "fibonacci", "atr", "cci", "pivots"],
                  "example": "sma"
                },
                "queryParams": {
                  "type": "object",
                  "description": "Parameters for the chosen endpoint",
                  "properties": {
                    "symbol": {
                      "type": "string",
                      "description": "Stock symbol (e.g., 'AAPL', 'MSFT') - required for all indicators",
                      "example": "AAPL"
                    },
                    "period": {
                      "type": "integer",
                      "description": "Number of periods to calculate the indicator - required for most indicators",
                      "example": 14
                    },
                    "fast_period": {
                      "type": "integer",
                      "description": "Fast period for MACD calculation - required for MACD",
                      "example": 12
                    },
                    "slow_period": {
                      "type": "integer",
                      "description": "Slow period for MACD calculation - required for MACD",
                      "example": 26
                    },
                    "signal_period": {
                      "type": "integer",
                      "description": "Signal period for MACD calculation - required for MACD",
                      "example": 9
                    },
                    "stddev": {
                      "type": "number",
                      "description": "Standard deviation multiplier for Bollinger Bands - required for bbands",
                      "example": 2
                    },
                    "k_period": {
                      "type": "integer",
                      "description": "K period for Stochastic calculation - required for stoch",
                      "example": 14
                    },
                    "d_period": {
                      "type": "integer",
                      "description": "D period for Stochastic calculation - required for stoch",
                      "example": 3
                    },
                    "ma_type": {
                      "type": "string",
                      "description": "Moving average type for calculations",
                      "enum": ["sma", "ema", "wma", "dema", "tema", "trima", "kama", "mama", "t3"],
                      "example": "sma"
                    },
                    "interval": {
                      "type": "string",
                      "description": "Time interval for data",
                      "enum": ["1m", "5m", "15m", "30m", "60m", "daily", "weekly", "monthly"],
                      "example": "daily"
                    },
                    "price_type": {
                      "type": "string",
                      "description": "Price type to use for calculations",
                      "enum": ["close", "open", "high", "low", "volume"],
                      "example": "close"
                    },
                    "time_period": {
                      "type": "string",
                      "description": "Time period for analysis",
                      "enum": ["daily", "weekly", "monthly"],
                      "example": "daily"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
